<div class="container">
  <h2 class="title-lg mb">Редагування питання</h2>
  <%= form_with model: @question do |form| %>
    <p> <%= form.label :body, 'Текст питання:' %></p>
    <p> <%= form.text_area :body, rows: 5, class: 'form-text-area'%></p>
    <p class="mt-lg">
      <%= form.submit 'Зберегти', class: 'button button-main' %>
    </p>
  <% end %>
</div>
